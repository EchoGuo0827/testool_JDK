<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_green"
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
          <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="修改名称"
            android:textSize="@dimen/text_size_20dp"
            />
        <EditText 
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            /> 
    </LinearLayout>
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:textSize="@dimen/text_size_20dp"
            />
        
        <EditText 
            android:id="@+id/oldPwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            /> 
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textSize="@dimen/text_size_20dp"
            />
        
        <EditText 
            android:id="@+id/newPwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            /> 
    </LinearLayout>
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="信道"
            android:textSize="@dimen/text_size_20dp"
            />
        
        <EditText 
            android:id="@+id/channel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            /> 
    </LinearLayout>
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DNS"
            android:textSize="@dimen/text_size_20dp"
            />
        
        <EditText 
            android:id="@+id/dns"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            /> 
    </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/TextViewTheme"
            android:layout_width="fill_parent"
            android:text="安全模式" />

        <RadioGroup
            android:id="@+id/group_wlan_enc_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >

            <RadioButton
                android:id="@+id/wpa1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"   
                android:textSize="13dp"                
                android:text="WPA1" />

            <RadioButton
                android:id="@+id/wpa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"  
                android:text="WPA2" />

            <RadioButton
                android:id="@+id/wpa_mix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"  
                android:checked="true"  
                android:text="WPA1/WPA2" />
            
            <RadioButton
                android:id="@+id/none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"  
                android:text="NONE" />
        </RadioGroup>
    </LinearLayout>
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
     <RadioGroup
        android:id="@+id/rg_ssid_broad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_ssid_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="SSID广播开启" />

        <RadioButton
            android:id="@+id/rb_ssid_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSID广播关闭" />
    </RadioGroup> 
      </LinearLayout>
</LinearLayout>
</ScrollView>
